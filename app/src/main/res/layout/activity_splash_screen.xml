<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.shivani.logger.SplashScreen">
    <TextView
        android:id="@+id/appText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/blue" 
        android:textSize="40sp"
        android:layout_centerInParent="true"
        android:transitionName="simple_activity_transition"
        tools:ignore="UnusedAttribute"/>

    <com.agrawalsuneet.dotsloader.ui.LazyLoader
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        app:all_animDur="500"
        app:all_dotsColor="@color/blue"
        app:all_dotsDist="3dp"
        app:all_dotsRadius="4dp"
        app:lazyloader_firstDelayDur="200"
        app:lazyloader_secondDelayDur="400" />

</RelativeLayout>
